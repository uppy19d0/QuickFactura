@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<h1 style = "font-weight:bold; color:BurlyWood">@ViewData["Title"]</h1>
<center>
    <img class="rounded-Thumbnail" height="180" width="180"
         asp-append-version="true" src="/Images/person.jpg" />
    <form asp-for="account" method="post">
        <div>
            <h3 style="font-weight:bold; color:BurlyWood">Sistema de facturación </h3>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
         <div class="col-12 row">
    <label for="Input.Documento_Identidad">Cédula O RNC</label>
    <input  class="form-control" asp-for="Input.Documento_Identidad" 
           aria-describedby="Documento_Identidad" placeholder="Ingrese Documento de Identidad">
            <span asp-validation-for="Input.Documento_Identidad" class="text-danger"></span>
           
  </div>
        <div class="col-12 row">
    <label for="Input.Password">Contraseña</label>
    <input  class="form-control" asp-for="Input.Password"
           aria-describedby="Input.Password" placeholder="Ingrese su contraseña">
             <span asp-validation-for="Input.Password" class="text-danger"></span>
        
        <br /><br />
        <button type="submit" class="btn btn-primary btn-block" >Entrar</button>
        

        <div class="col-12 row">
            <span class="col-12">
                <a href="/Identity/Account/Register" class="col-6" style = "color:BurlyWood">Crear una cuenta</a>
            </span>
        </div>

    </form>

</center>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
